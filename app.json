{
  "expo": {
    "name": "SoulTalk",
    "slug": "soultalk-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "soultalk",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.soultalk.mobile",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to authenticate with SoulTalk"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.soultalk.mobile",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "soultalk"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "keycloakConfig": {
        "url": "http://localhost:8080",
        "realm": "soultalk",
        "clientId": "soultalk-mobile"
      },
      "apiConfig": {
        "baseUrl": "http://localhost:8000/api"
      },
      "googleClientId": {
        "iosClientId": "YOUR_GOOGLE_IOS_CLIENT_ID",
        "androidClientId": "YOUR_GOOGLE_ANDROID_CLIENT_ID",
        "webClientId": "YOUR_GOOGLE_WEB_CLIENT_ID"
      },
      "facebookAppId": "YOUR_FACEBOOK_APP_ID"
    }
  }
}
